# Copy this file to `.env` and fill in your values.

# API server
PORT=5000
 
# Auth (JWT)
# Generate a strong secret e.g. with `openssl rand -base64 48` (do NOT commit your real .env)
JWT_SECRET=change_me_strong_secret
JWT_EXPIRES_IN=1d

# (Deprecated) Admin API Secret
# Previously used to protect admin endpoints with an x-admin-secret header.
# No longer used now that JWT-based auth with roles is implemented.
# ADMIN_API_SECRET=

# MySQL connection
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=clinicare
# Optional pool settings
DB_CONNECTION_LIMIT=10

# Sequelize
# When set to true, the server will auto-sync models and create/alter tables
DB_SYNC=true
