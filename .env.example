# Server
PORT=5000

# MySQL connection
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=clinicare
DB_CONNECTION_LIMIT=10

# Set to true to let Sequelize create/alter tables on startup
DB_SYNC=true

# JWT
# IMPORTANT: change this to a strong random value in your real .env
JWT_SECRET=change-me-in-.env
JWT_EXPIRES_IN=1d

# Briq OTP/SMS (set these to enable OTP via Briq)
# Base URL for Briq APIs (OTP): default is https://api.briq.tz
BRIQ_OTP_BASE_URL=https://api.briq.tz
# Briq Developer App ID (from Briq dashboard -> Developer Apps)
BRIQ_DEVELOPER_APP_ID=
# Briq API Key (Bearer token)
BRIQ_API_KEY=
# Optional: Sender ID used for plain SMS (not needed if using OTP API only)
BRIQ_SENDER_ID=CLINIC
