  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/api/health", "host": ["{{baseUrl}}"], "path": ["api","health"] }
      }
    },
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/api/ping", "host": ["{{baseUrl}}"], "path": ["api","ping"] }
      }
    },
    {
      "name": "Users - List",
      "request": {
        "method": "GET",
        "header": [],
        "url": { "raw": "{{baseUrl}}/api/users", "host": ["{{baseUrl}}"], "path": ["api","users"] }
      }
    },
    {
      "name": "Register - Patient",
      "request": {
        "method": "POST",
        "header": [ {"key":"Content-Type","value":"application/json"} ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Alice Patient\",\n  \"email\": \"alice.patient@example.com\",\n  \"password\": \"Secret123!\",\n  \"role\": \"patient\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/register", "host": ["{{baseUrl}}"], "path": ["api","register"] }
      }
    },
    {
      "name": "Admin - Create Doctor",
      "request": {
        "method": "POST",
        "header": [
          {"key":"Content-Type","value":"application/json"},
          {"key":"x-admin-secret","value":"{{adminSecret}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Dr. Jane\",\n  \"email\": \"dr.jane@example.com\",\n  \"password\": \"Secret123!\",\n  \"role\": \"doctor\"\n}"
        },
        "url": { "raw": "{{baseUrl}}/api/admin/users", "host": ["{{baseUrl}}"], "path": ["api","admin","users"] }
      }
    },

    { "name": "Patients - Create", "request": {
      "method": "POST",
      "header": [ {"key":"Content-Type","value":"application/json"} ],
      "body": {"mode":"raw","raw":"{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"+255700000000\",\n  \"notes\": \"Allergic to penicillin\"\n}"},
      "url": {"raw":"{{baseUrl}}/api/patients","host":["{{baseUrl}}"],"path":["api","patients"]}
    }},
    { "name": "Patients - List", "request": {
      "method": "GET",
      "header": [],
      "url": {"raw":"{{baseUrl}}/api/patients","host":["{{baseUrl}}"],"path":["api","patients"]}
