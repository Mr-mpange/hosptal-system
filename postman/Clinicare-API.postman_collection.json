      "method": "POST",
      "header": [ {"key":"Content-Type","value":"application/json"} ],
      "body": {"mode":"raw","raw":"{\n  \"patient_id\": 1,\n  \"date\": \"2025-09-20\",\n  \"time\": \"10:30\",\n  \"notes\": \"Initial consultation\"\n}"},
      "url": {"raw":"{{baseUrl}}/api/appointments","host":["{{baseUrl}}"],"path":["api","appointments"]}
    }},
    { "name": "Appointments - List", "request": {
      "method": "GET",
