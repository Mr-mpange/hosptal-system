    }},

    { "name": "Records - Create", "request": {
      "method": "POST",
      "header": [ {"key":"Content-Type","value":"application/json"} ],
      "body": {"mode":"raw","raw":"{\n  \"patient_id\": 1,\n  \"record_type\": \"Diagnosis\",\n  \"notes\": \"Hypertension Stage 1\",\n  \"date\": \"2025-09-20\"\n}"},
      "url": {"raw":"{{baseUrl}}/api/records","host":["{{baseUrl}}"],"path":["api","records"]}
